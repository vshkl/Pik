<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbToolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/ivActionShare"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="48dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ivActionEdit"
        app:srcCompat="@drawable/ic_share"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/ivActionEdit"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="48dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivActionShare"
        app:layout_constraintRight_toLeftOf="@+id/ivActionInfo"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/ivActionInfo"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="48dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivActionEdit"
        app:layout_constraintRight_toLeftOf="@+id/ivActionDelete"
        app:srcCompat="@drawable/ic_info"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/ivActionDelete"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="48dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivActionInfo"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="ContentDescription"
        />

</android.support.constraint.ConstraintLayout>